<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
  <title>Document</title>
</head>
<body>
  <% const p = (typeof existingPost !== "undefined" && existingPost) ? existingPost : null; %>

<form action="/post" method="POST">
  <input type="hidden" name="id" value="<%= p ? p.id : '' %>">

  <input name="subject" value="<%= p ? p.subject : '' %>" required>

  <textarea name="content" required><%= p ? p.content : '' %></textarea>

  <input type="submit" value="<%= p ? 'Update Post' : 'Submit Post' %>">
</form>
</body>
</html>

